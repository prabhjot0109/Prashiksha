<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationView.TextAppearance.Active" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#f68712</item>
        <item name="fontFamily">@font/ancillary_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="BottomNavigationView.TextAppearance.Inactive" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="fontFamily">@font/ancillary_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/harabara</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonLoginStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/logintextcolor</item>
        <item name="android:background">@drawable/gradient_loginbutton</item>
        <item name="android:font">@font/bifocals</item>
        <item name="android:strokeColor">#000000</item>
        <item name="colorControlActivated">@color/login_page_color</item>
    </style>


    <style name="EmailButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/login_page_color</item>
        <item name="android:textColor">@color/logintextcolor</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
    </style>

</resources>
